<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:botview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/botview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        botview:cardCornerRadius="0dp"
        botview:cardElevation="5dp"
        botview:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/bottleViewLigne"
            android:padding="0dp"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/userView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/userView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip">

                            <ImageView
                                android:id="@+id/buttonCreationBotBack"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="0dp"
                                android:adjustViewBounds="true"
                                android:gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/circ_bot" />

                            <ImageView
                                android:id="@+id/botListview_images"
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:layout_marginLeft="12.7dp"
                                android:layout_marginTop="12.5dip"
                                android:padding="0dp" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="0dp">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dip"
                                    android:text="userName"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/userid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dip"
                                    android:text="userId"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/userCave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="userCave"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginRight ="4dp"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_marginRight ="24dp"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop ="10dp"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dip">

                                <ImageView
                                    android:id="@+id/imgUserAckBack"
                                    android:layout_width="68dip"
                                    android:layout_height="32dip"
                                    android:layout_marginTop="6dip"
                                    android:padding="0dp"
                                    android:background="@drawable/border_button" />

                                <TextView
                                    android:id="@+id/imgUserAck"
                                    android:layout_width="60dip"
                                    android:layout_height="20dip"
                                    android:layout_marginLeft="6dip"
                                    android:layout_marginTop="11.5dip"
                                    android:padding="0dp"
                                    android:text="@string/Ack" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dip">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="0dp">

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dip">

                                        <ImageView
                                            android:id="@+id/imgBotAddBack"
                                            android:layout_width="58dip"
                                            android:layout_height="32dip"
                                            android:layout_marginTop="6dip"
                                            android:padding="0dp"
                                            android:background="@drawable/border_button" />

                                        <TextView
                                            android:id="@+id/imgBotAdd"
                                            android:layout_width="50dip"
                                            android:layout_height="20dip"
                                            android:layout_marginLeft="6dip"
                                            android:layout_marginTop="11.5dip"
                                            android:padding="0dp"
                                            android:text="@string/add" />
                                    </FrameLayout>

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/imgUserRefuseBack"
                                            android:layout_width="60dip"
                                            android:layout_height="32dip"
                                            android:layout_marginTop="6dip"
                                            android:padding="0dp"
                                            android:background="@drawable/border_button" />

                                        <TextView
                                            android:id="@+id/imgUserRefuse"
                                            android:layout_width="55dip"
                                            android:layout_height="20dip"
                                            android:layout_marginLeft="6dip"
                                            android:layout_marginTop="11.5dip"
                                            android:padding="0dp"
                                            android:text="@string/refuse" />
                                    </FrameLayout>
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dip">

                                <ImageView
                                    android:id="@+id/imgUserSuppBack"
                                    android:layout_width="78dip"
                                    android:layout_height="32dip"
                                    android:layout_marginTop="6dip"
                                    android:padding="0dp"
                                    android:background="@drawable/border_button" />

                                <TextView
                                    android:id="@+id/imgUserSupp"
                                    android:layout_width="68dip"
                                    android:layout_height="20dip"
                                    android:layout_marginLeft="6dip"
                                    android:layout_marginTop="11.5dip"
                                    android:padding="0dp"
                                    android:text="@string/Supp" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dip">

                                <ImageView
                                    android:id="@+id/imgUserRetBack"
                                    android:layout_width="58dip"
                                    android:layout_height="32dip"
                                    android:layout_marginTop="6dip"
                                    android:padding="0dp"
                                    android:background="@drawable/border_button" />

                                <TextView
                                    android:id="@+id/imgUserRet"
                                    android:layout_width="50dip"
                                    android:layout_height="20dip"
                                    android:layout_marginLeft="6dip"
                                    android:layout_marginTop="11.5dip"
                                    android:padding="0dp"
                                    android:text="@string/Ret" />
                            </FrameLayout>

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_marginRight ="4dp"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_marginRight ="24dp"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop ="10dp"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip">




                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
